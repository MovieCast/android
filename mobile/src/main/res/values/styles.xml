<resources>

    <!-- Base application theme. -->
    <style name="Theme.MovieCast" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:shadowColor">@android:color/transparent</item>
    </style>

    <!-- TODO: Find a way to make the status bar transparent in v18 and lower -->
    <style name="Theme.MovieCast.TransparentStatusBar" parent="Theme.MovieCast" />

    <style name="Theme.MovieCast.RatingBar" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
</resources>
