<resources>

    <!-- Base application theme. -->
    <style name="Theme.MovieCast" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:popupMenuStyle">@style/Theme.MovieCast.PopupMenu</item>
    </style>

    <!-- TODO: Find a way to make the status bar transparent in v18 and lower -->
    <style name="Theme.MovieCast.TransparentStatusBar" parent="Widget.AppCompat.PopupMenu" />

    <style name="Theme.MovieCast.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/bg</item>
    </style>
</resources>
